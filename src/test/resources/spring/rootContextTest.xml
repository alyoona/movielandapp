<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <import resource="rootContext.xml"/>

    <context:component-scan base-package="com.stroganova.movielandapp">
        <context:exclude-filter type="regex" expression="com\.stroganova\.movielandapp\.service\.*"/>
    </context:component-scan>


    <jdbc:embedded-database id="h2DataSource" type="H2">
        <jdbc:script location="classpath:db/schema.sql" />
    </jdbc:embedded-database>

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="h2DataSource" name="dataSource" />
    </bean>

</beans>