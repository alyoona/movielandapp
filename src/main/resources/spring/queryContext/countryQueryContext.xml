<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="getAllCountriesByMovieIdSql" class="java.lang.String">
        <constructor-arg value="SELECT c.id, c.name
                                FROM movieland.movie m
                                LEFT JOIN movieland.movie_country mc ON m.id = mc.movie_id
                                JOIN movieland.country c ON mc.country_id = c.id
                                WHERE m.id = :id;"/>
    </bean>

    <bean id="countryInsertSql" class="java.lang.String">
        <constructor-arg value="INSERT INTO movieland.country (name) VALUES (:name);"/>
    </bean>

    <bean id="movieCountryInsertSql" class="java.lang.String">
        <constructor-arg value="INSERT INTO movieland.movie_country (movie_id, country_id)
                                VALUES (:movie_id, :country_id);"/>
    </bean>


</beans>