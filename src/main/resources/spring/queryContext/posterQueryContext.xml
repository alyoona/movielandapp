<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="posterInsertSql" class="java.lang.String">
        <constructor-arg value="INSERT INTO movieland.poster (movie_id, picture_path)
                                VALUES (:movie_id, :picture_path)"/>
    </bean>

    <bean id="posterUpdateSql" class="java.lang.String">
        <constructor-arg value="UPDATE movieland.poster
                                SET picture_path = :picture_path
                                WHERE movie_id = :movie_id;"/>
    </bean>


</beans>