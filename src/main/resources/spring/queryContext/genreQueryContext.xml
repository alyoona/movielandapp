<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="getAllGenresSql" class="java.lang.String">
        <constructor-arg value="SELECT id, name
                                FROM movieland.genre;"/>
    </bean>

    <bean id="getAllGenresByMovieIdSql" class="java.lang.String">
        <constructor-arg value="SELECT g.id, g.name
                                FROM movieland.movie m
                                LEFT JOIN movieland.movie_genre mg ON m.id = mg.movie_id
                                JOIN movieland.genre g ON mg.genre_id = g.id
                                WHERE m.id = :id;"/>
    </bean>

    <bean id="movieGenreInsertSql" class="java.lang.String">
        <constructor-arg value="INSERT INTO movieland.movie_genre (movie_id, genre_id)
                                VALUES (:movie_id, :genre_id);"/>
    </bean>


</beans>